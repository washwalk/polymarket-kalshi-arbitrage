{
  "$schema": "https://railway.app/standard-schema.json",
  "build": {
    "builder": "RAILPACK",
    "railpackConfig": {
      "aptPackages": [
        "python3",
        "python-is-python3",
        "build-essential",
        "gcc",
        "make"
      ]
    }
  },
  "deploy": {
    "startCommand": "npm run start"
  },
  "services": [
    {
      "name": "web",
      "source": {
        "root": "apps/web"
      }
    },
    {
      "name": "bot",
      "source": {
        "root": "apps/bot"
      }
    }
  ]
}